<view class="container">
  <view class="card" wx:for="{{list}}" wx:key="index">
    <view class="avatar">
      <image src="{{item.target.avatar_url}}" mode=" widthFix" />
    </view>
    <view class="card_main">
      <view class="nickname blue">
        {{item.target.nick_name}}
      </view>
      <view class="content">
        {{item.target.content}}
      </view>
      <view class="media {{item.target.images.length ==1? 'column-count-1' :(item.target.images.length % 3 == 0? 'column-count-3' : 'column-count-2' )}} ">
        <block wx:for="{{item.target.images}}" wx:key="index">
          <view class="img">
            <image bindtap="img_click" data-img="{{item}}" src="{{item}}" mode="aspectFill" />
          </view>
        </block>
      </view>

      <view class="time">
        <view class="info gray font-mini">
          <view>
            {{item.target.create_time}}
          </view>
          <view wx:if="{{item.target.address}}">
            {{item.target.address}}
          </view>
        </view>
        <view class="card_btn">
          <view bindtap="is_like" data-like="{{item.target}}">
            <view>
              <image class="icon" wx:if="{{item.target.flag==0}}" src="/images/like.png" mode="widthFix" />
              <image class="icon" wx:else="" src="/images/like(1).png" mode="widthFix" />
            </view>
            <view>
              赞
            </view>
          </view>
          <view bindtap="pinglun" data-ping="{{item.target}}">
            <view>
              <image class="icon" src="/images/pinglun.png" mode="widthFix" />
            </view>
            <view>
              评论
            </view>
          </view>
        </view>
      </view>
  
      <view class="gongneng">
        <view class="zan">
          <view>
            <image src="/images/like.png" class="icon" mode="widthFix" />
          </view>
          <view class="space font-mini blue" wx:key="index">
            <!-- <text class="{{index == 1? '' : 'hidden'}}">,</text> {{item}} -->
            <text>{{item.target.likes_list}}</text>
          </view>
        </view>
        <view class="pinglun {{pinglun ? (like? 'border-top':''): ''}}">
          <view wx:for="{{pinglun}}" wx:key="index">
            <text class="font-mini blue">{{item.nickName}} : </text>
            <text class="font-mini">{{item.content}}</text>
          </view>
        </view>
      </view>
    </view>
  </view>
  <view bindtap="img_click" class="img_click {{is_img_click == false ? 'hidden' : ''}}">
    <image show-menu-by-longpress src="{{img_src}}" mode="widthFix" />
  </view>
  <view bindtap="add" class="add">
    <image src="/images/add(2).png" mode="widthFix" />
  </view>
</view>
<page-container class="add_form" show="{{add}}">
  <form class="form" bindsubmit="formSubmit" bindreset="formReset">
    <view>
      <view class="label">内容</view>
      <textarea class="inputs" name="content" value="" placeholder="请输入内容" />
    </view>
    <!-- 图片 -->
    <view>
      <view class="label">图片</view>
      <input type="text" hidden name="imgbox" value="{{imgbox}}" />
      <view class="images_box">
        <block wx:key="imgbox" wx:for="{{imgbox}}">
          <view class='img-box'>
            <image class='img' mode="aspectFill" src='{{item}}'></image>
            <view class='img-delect' data-deindex='{{index}}' bindtap='imgDelete1'>
              <image class='img' src='/images/delect.png'></image>
            </view>
          </view>
        </block>
        <view class='img-box' name="imagebox" bindtap='addPic1' wx:if="{{imgbox.length<issuePicSum}}">
          <image class='img' src='/images/icon_add.png'></image>
        </view>
      </view>
    </view>
    <button form-type="submit">提交</button>

    <view class="row-wrap">
      <view class="label-right" style="text-align: center;line-height: 50px;">
        <text style="color: rgb(161, 160, 159)">审核通过后方可展示首页</text>
      </view>
    </view>
    <view class="yinshi" bindtap="to_niu_my_fuwuyinshi">《用户服务协议》 及 《隐私政策》</view>
  </form>
</page-container>