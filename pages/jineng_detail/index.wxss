/* 模拟弹窗 */
.dialog__mask {
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    z-index: 10;
    /* background: rgba(0, 0, 0, 0.8); */
    background-color: rgba(0, 0, 0, 0.7);
    filter: blur(4px);
    /* 设置阴影半透明背景如： background: rgba(0, 0, 0, 0.4); */
    display: none;
}

.dialog__container {
    position: fixed;
    bottom: 400rpx;
    width: 650rpx; 
    /* 弹窗布局宽 */
    height: 350rpx; 
    /* 弹窗布局高，与下面弹出距离transform有关 */
    margin-left: 50rpx;
    background: #f8f8f8;
    transform: translateY(400%); 
    /* 弹框弹出距离，与弹框布局高度有关，如400%表示弹起距离为4倍弹窗高度 */
    transition: all 0.4s ease;
    z-index: 12;
    border-radius: 20rpx;
    box-shadow: 0px 3px 3px gainsboro;
    
     /* 弹框的悬浮阴影效果，如不需要可注释该行 */
}

.dialog--show .dialog__container {
    transform: translateY(0);
}

.dialog--show .dialog__mask {
    display: block;
}
