
.liushi_container {
  width: 100vw;
  background-color: #F4F5F9;
  overflow-y: scroll;
}

/* 瀑布流布局 */
.picture {
  column-gap: 5rpx;
  column-count: 2;
  margin: 20rpx 0;
}

.item {
  width: calc(100% - 30rpx);
  break-inside: avoid;
  /* box-shadow: 0 5px 15px 0 rgba(0, 0, 0, 0.1); */
  border-radius: 10rpx;
  margin: 0 15rpx;
}

.item .image {
  width: 100%;
  border-radius: 15rpx;
}

.null-wrap {
  height: 30rpx;
}


.font-mini {
  font-size: 10px;
}

.goTop {
  width: 90rpx;
  height: 140rpx;
  text-align: center;
  position: fixed;
  right: 10rpx;
  bottom: 85rpx;
  border-radius: 15rpx;
  font-size: 10px;
  z-index: 999;
  color: gray;
  background-color: rgba(255, 255, 2555, .8)
}
.goTop image{
  width: 100%;
}
.center {
  text-align: center;
}
.data-img {
  width: 200rpx;
  height: 300rpx;
  margin: 0 auto;
}