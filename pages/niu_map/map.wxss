/* pages/map/map.wxss */
page {
  height: 100%;
}
.cover-view {
  width: 80rpx;
  height: 80rpx;
  float: right;
  margin-right: 30rpx;
  margin-top: 150%;
  opacity: 0.8;
}



.map-container {
	display: flex;
  flex-direction: column;
  align-items: center;
  box-sizing: border-box;
  background: #F8F8F7;
  width: 100%;
  height: 100%;
}
.map-content {
  background: #FFF;
  padding: 20px 0 0;
  margin-top: 10px;
}
.map {
  width:100%;
  /* height:500px; */
  height: 100%;
  position:relative;
}
.feature-switch {
  line-height: 51px;
}
.locationpicker-ic-marker {
	position: absolute;
  top: 50%;
  left: 50%;
  margin-top: -44px;
  margin-left: -15px;
  width: 30px;
  height: 44px;
  z-index: 10;
}
.locationpicker-img {
  width: 30px;
  height: 44px;
}
.locationpicker-animation {
  animation: markermove 0.5s ease;
}
@keyframes markermove
{
  from {transform: translateY(0)}
  50% {transform: translateY(-50px)}
  to {transform: translateY(0)}
}
