<!--pages/map/map.wxml-->

<view class="" hover-class="none" hover-stop-propagation="false" style="width: 100%; height: 100%;">
  <map id="map" longitude="{{longitude}}" latitude=" {{latitude}}" markers="{{markers}}" scale="{{scale}}" show-location style="width: 100%; height: 100%;" bindmarkertap="markertap" bindcallouttap="clickCallout" show-scale="true" bindtap="bindtap" show-compass="true" bindregionchange="regionchange" bindcallouttap="bindcallouttap">
    <!-- bindupdated="bindupdated"  -->
    <cover-view class="cover-view" bindtap="controltap">
      <cover-image class="station" src="../../images/position.png"></cover-image>
    </cover-view>

    <cover-view slot="callout" wx:for="{{markers}}" wx:key="item">
      <cover-view marker-id="{{item.id}}" style="padding:15rpx;border-radius: 15rpx;background-color: #ffffff;font-size: 26rpx;width: 300rpx;">
        <cover-view style="float: left;">
          <cover-image  wx:if="{{item.customCallout.image}}" class="" src="{{item.customCallout.image}}" style="width: 80rpx;height: 80rpx;" mode="aspectFit" />
        </cover-view>
        <cover-view style="float: left;color: #000000;width: 180rpx;margin-left: 10rpx;">
          <cover-view> {{item.customCallout.content}} </cover-view>
          <cover-view> </cover-view>
          <cover-view style="color: #ff0000;margin-top: 5rpx;">{{item.customCallout.price}}</cover-view>
        </cover-view>
      </cover-view>
    </cover-view>

    <!-- <cover-view slot="callout">
      <block wx:for="{{customCalloutMarkerIds}}" wx:key="*this">
        <cover-view class="customCallout" marker-id="{{item}}">
          <cover-image class="icon" src="/image/voice.png"></cover-image>
          <cover-view class="content">
            {{num}}-{{item}}-{{index}}
          </cover-view>
        </cover-view>
      </block>
    </cover-view> -->

  </map>
</view>