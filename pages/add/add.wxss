.bg{
  width: 100vw;
  height: 100vh;
  position: absolute;
}
.container {
  height: 100vh;
  position: relative;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  overflow: hidden;
  /* color: rgb(5, 5, 5); */
  background: linear-gradient(to bottom,#29b6f6,#fff);
  color:rgb(248, 248, 250);
  font-size: 1.1rem;
  font-weight: bold;
}

.class {
  display: flex;
  justify-content: space-around;
  align-items: center;
}

.dong {
  animation: dong .5s ease-in-out;
}

.fenlei {
  display: flex;
  align-items: center;
  justify-content: center;
  flex-direction: column;
}

.icon {
  width: 50px;
  height: 50px;
  border-radius: 50%;
}

.bottom {
  width: 100vw;
  height: 100vw;
  border-radius: 50%;
  /* background: #29b6f6; */
  background: linear-gradient(to bottom,#29b6f6,#fff,#fff,#fff);
  position: absolute;
  bottom: -80vw;
  text-align: center;
  line-height: 25vw;
  font-size: 20px;
  font-weight: bold;
  color: #fff;
}

.move {
  animation: move .5s linear;

}

@keyframes move {
  0% {
    bottom: -100vw;
  }

  20% {
    bottom: -95vw;
  }

  40% {
    bottom: -90vw;
  }

  60% {
    bottom: -85vw;
  }

  80% {
    bottom: -80vw;
  }

  100% {
    bottom: -70vw;
  }
}


@keyframes dong {
  from {
    justify-content: flex-end;
    opacity: 0;
  }

  to {
    justify-content: space-around;
    opacity: 1;
  }
}
