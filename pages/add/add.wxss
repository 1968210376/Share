/* pages/add/add.wxss */
.form {
    width: 90vw;
    margin: 0 auto;
}

.form .form_item {
    width: 90vw;
    /* height: 95rpx; */
    height: 150rpx;
    background: #fff;
    display: flex;
    justify-content: space-between;
    align-items: center;
}

.form_items {
    width: 90vw;
    /* height: 95rpx; */
    height: 300rpx;
    padding: 10rpx 0;
    background: #fff;
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    align-items: center;
}

.space {
    width: 100vw;
    height: 16rpx;
    background: #F4F5F9;
}

.form_item text {
    width: 40%;
    font-size: 28rpx;
    font-weight: normal;
    color: #333;
    line-height: 104rpx;
    /* background-color: darkmagenta; */
    float: left;
    padding: 0%;
    text-align: left;
}

.form_item input,
.form_item r {
    width: 55%;
    height: 100%;
    font-size: 28rpx;
    color: #999;
    padding: 0%;
    /* background-color:darksalmon; */
    float: right;
}

textarea {
    width: 90vw;
    /* border: #333 1px solid; */
}

image {
    width: 200rpx;
    height: 200rpx;
}

.img_box {
    width: 90vw;
    margin: 0 auto;
    display: flex;
    flex-wrap: wrap;
    justify-content:flex-start;
    align-items: center;
}

.img,
.imgs {
    width: 210rpx;
    height: 210rpx;
    display: flex;
    justify-content: center;
    align-items: center;
    margin: 5rpx;
}

.img {
    border: 1px solid #333;
    position: relative;
}