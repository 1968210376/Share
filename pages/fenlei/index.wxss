  display: flex;
  flex-direction: row;
  justify-content: space-around;
  padding: 15px 10px 0;
  box-sizing: border-box;
  color: rgb(53, 52, 52);
  background-color: #fff;
}

.tab-item {
  flex: 1;
  text-align: center;
  padding: 10rpx;
}

.tab-items {
  flex: 1;
