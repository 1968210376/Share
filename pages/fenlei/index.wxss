/**index.wxss**/
.container {
  font-size: 16px;
}

.searchBox {
  width: 100vw;
  position: fixed;
  /* margin: 15rpx auto; */
  display: flex;
  align-items: center;
  justify-content: space-around;
  color: rgb(136, 133, 133);
  background-color: #fff;
  box-sizing: border-box;
  padding: 8px 0;
  z-index: 1;
}

.location {
  width: 20%;
  display: flex;
  justify-content: center;
  align-items: center;
}

.location_logo {
  width: 50rpx;
  height: 50rpx;
  margin: 0 auto;
}

.input-group {
  width: 75%;
}

.input-box {
  display: flex;
  justify-content: center;
  align-items: center;
  border: 1px solid transparent;
  transition: border-color .3s cubic-bezier(.25, .01, .25, 1) 0s, color .3s cubic-bezier(.25, .01, .25, 1) 0s, background .2s cubic-bezier(.25, .01, .25, 1) 0s;
  border-radius: 15rpx;
  /* background-color: rgb(241, 238, 238); */
  background-color: transparent;
  box-shadow: inset 1px 1px 1px #eee, 1px 1px 1px #eee;
  box-sizing: border-box;
}

.input {
  width: 80%;
  text-align: center;
  letter-spacing: .3rem;
  line-height: 30px;
  height: 30px;
  padding: 0 1rem;
  color: #000;
  font-size: 14px;
  border-right: 1px solid #eee;
}

.search_btn {
  width: 20%;
  text-align: center;
  display: flex;
  justify-content: center;
  background-color: #fff;
}

.input-box:hover,
.input-group:hover .input-box {
  outline: none;
  border-color: #000;
}

.input-group:hover .input-box {
  color: #000;
}

.top {
  width: 100vw;
  height: 60vw;
  z-index: -1;
